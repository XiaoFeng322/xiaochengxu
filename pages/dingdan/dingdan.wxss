page {
  background: rgba(243, 243, 243, 0.49);
}

/* 头部 */

.meHeader {
  height: 260rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  position: relative;
  margin-bottom: 16rpx;
}

.meHeader image {
  height: 132rpx;
  width: 132rpx;
  margin-top: 32rpx;
}

.personalName {
  position: absolute;
  top: 176rpx;
  left: 294rpx;
  text-align: center;
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #4a4a4a;
  box-sizing: border-box;
  padding-top: 12rpx;
  font-weight: 600;
  background: #fff;
}

.personalDetail {
  background-color: #fff;
  margin-top: 4rpx;
}

.personalDetail .dingdan {
  padding: 1rpx 32rpx;
  height: 80rpx;
  border-bottom: 2rpx solid rgba(155, 155, 155, 0.1);
}

.personalDetail .jifen {
  padding: 1rpx 32rpx;
  height: 80rpx;
  border-bottom: 2rpx solid rgba(155, 155, 155, 0.1);
}

/* 订单详情 */

.ddList {
  margin-top: 4rpx;
  background-color: #fff;
  margin-bottom: 16rpx;
}

.dingdan {
  padding: 0 32rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
}

.dingdan .ddTime {
  height: 68rpx;
  line-height: 68rpx;
  font-size: 28rpx;
  color: #4a4a4a;
  border-bottom: 2rpx solid rgba(155, 155, 155, 0.1);
}

.ddcenter {
  float: left;
  width: 300rpx;
}

.ddcenter .ddName {
  float: left;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #4a4a4a;
  margin-top: 14rpx;
}

.ddcenter .ddjiage {
  float: right;
  font-family: HelveticaNeue;
  font-size: 24rpx;
  color: #4a4a4a;
  line-height: 56rpx;
}
.top-ddcenter{
  overflow: hidden;
}

.ddState {
  float: right;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #666;
  margin-top: 48rpx;
}

.ddBottom {
  overflow: hidden;
  margin: 0 32rpx;
  border-top: 2rpx solid rgba(155, 155, 155, 0.1);
  padding-top: 16rpx;
  padding-bottom: 20rpx;
}

.ddBottom .ddCount {
  float: left;
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  margin-top: 6rpx;
  color: #666;
}

.ddBottom .Zjiage {
  float: right;
  font-family: HelveticaNeue;
  font-size: 32rpx;
  color: #ef4747;
  font-weight: 600;
}
